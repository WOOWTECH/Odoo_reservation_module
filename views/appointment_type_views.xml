<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Appointment Type Form View -->
    <record id="appointment_type_view_form" model="ir.ui.view">
        <field name="name">appointment.type.view.form</field>
        <field name="model">appointment.type</field>
        <field name="arch" type="xml">
            <form string="Appointment Type">
                <header>
                    <button name="action_share" type="object" string="Share" class="btn-primary" icon="fa-share-alt"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_bookings" type="object" class="oe_stat_button" icon="fa-calendar-check-o">
                            <field name="booking_count" widget="statinfo" string="Bookings"/>
                        </button>
                        <button name="action_view_resource_bookings" type="object" class="oe_stat_button" icon="fa-cube"
                                invisible="booking_type != 'resource'">
                            <span>Resource Gantt</span>
                        </button>
                        <button name="action_view_staff_bookings" type="object" class="oe_stat_button" icon="fa-users"
                                invisible="booking_type != 'user'">
                            <span>Staff Gantt</span>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <field name="image" widget="image" class="oe_avatar" options="{'preview_image': 'image'}"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Meeting, Table Booking"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="active" invisible="1"/>
                            <field name="is_published"/>
                            <field name="booking_type"/>
                        </group>
                        <group>
                            <field name="slot_duration" widget="float_time"/>
                            <field name="timezone"/>
                            <field name="assignment_method"/>
                        </group>
                    </group>
                    <group string="Location">
                        <group>
                            <field name="location_type"/>
                            <field name="video_link" invisible="location_type != 'online'" placeholder="https://meet.google.com/..."/>
                        </group>
                        <group>
                            <field name="location_id" invisible="location_type != 'physical'"
                                   context="{'show_address': 1}" options="{'always_reload': True}"/>
                            <field name="location_address" invisible="location_type != 'physical' or not location_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Availability" name="availability">
                            <group>
                                <group string="Schedule Configuration">
                                    <field name="schedule_type"/>
                                    <field name="schedule_based_on"/>
                                </group>
                                <group string="Capacity" invisible="not manage_capacity">
                                    <field name="manage_capacity"/>
                                    <field name="total_capacity" invisible="not manage_capacity"/>
                                    <field name="max_concurrent_bookings"/>
                                </group>
                                <group string="Capacity" invisible="manage_capacity">
                                    <field name="manage_capacity"/>
                                    <field name="max_concurrent_bookings"/>
                                </group>
                            </group>
                            <group string="Resources" invisible="booking_type != 'resource'">
                                <field name="resource_ids" widget="many2many_tags" nolabel="1" colspan="2"/>
                            </group>
                            <group string="Staff Members" invisible="booking_type != 'user'">
                                <field name="staff_user_ids" widget="many2many_tags" nolabel="1" colspan="2"/>
                            </group>
                            <separator string="Weekly Schedule" invisible="schedule_type != 'recurring'"/>
                            <field name="availability_ids" invisible="schedule_type != 'recurring'" nolabel="1">
                                <list editable="bottom">
                                    <field name="dayofweek"/>
                                    <field name="hour_from" widget="float_time"/>
                                    <field name="hour_to" widget="float_time"/>
                                    <field name="resource_id" optional="hide" invisible="parent.booking_type != 'resource'"/>
                                    <field name="user_id" optional="hide" invisible="parent.booking_type != 'user'"/>
                                </list>
                            </field>
                            <div class="mt-3" invisible="schedule_type != 'recurring'">
                                <button name="action_add_closing_days" type="object" string="Add Closing Days" class="btn-secondary" icon="fa-calendar-times-o"/>
                            </div>
                        </page>
                        <page string="Questions" name="questions">
                            <field name="question_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="question_type"/>
                                    <field name="required"/>
                                </list>
                            </field>
                        </page>
                        <page string="Communication" name="communication">
                            <group string="Introduction Page">
                                <field name="introduction_page" nolabel="1" colspan="2" placeholder="Content shown to visitors before booking..."/>
                            </group>
                            <group string="Confirmation Page">
                                <field name="confirmation_page" nolabel="1" colspan="2" placeholder="Content shown after booking is confirmed..."/>
                            </group>
                            <separator string="Email Notifications"/>
                            <div class="alert alert-info" role="alert">
                                <i class="fa fa-info-circle"/> Email notifications are automatically sent when bookings are confirmed, rescheduled, or cancelled.
                            </div>
                        </page>
                        <page string="Options" name="options">
                            <group>
                                <group string="Booking Settings">
                                    <field name="allow_invitations"/>
                                    <field name="auto_confirm"/>
                                    <field name="auto_confirm_capacity_percent" widget="percentage" invisible="not auto_confirm"/>
                                    <field name="show_image"/>
                                </group>
                                <group string="Payment" invisible="category not in ['paid_consultation', 'paid_seat']">
                                    <field name="require_payment"/>
                                    <field name="payment_product_id" invisible="not require_payment"/>
                                    <field name="payment_amount" invisible="not require_payment"/>
                                    <field name="currency_id" invisible="not require_payment"/>
                                    <field name="payment_per_person" invisible="not require_payment or category != 'paid_seat'"/>
                                </group>
                            </group>
                            <group>
                                <group string="Scheduling">
                                    <field name="max_booking_days"/>
                                    <label for="min_booking_hours"/>
                                    <div class="o_row">
                                        <field name="min_booking_hours" widget="float_time"/>
                                        <span>before start time</span>
                                    </div>
                                    <field name="slot_interval" widget="float_time"/>
                                </group>
                                <group string="Cancellation">
                                    <label for="cancel_before_hours"/>
                                    <div class="o_row">
                                        <field name="cancel_before_hours" widget="float_time"/>
                                        <span>before start time</span>
                                    </div>
                                </group>
                            </group>
                            <group>
                                <group string="Display">
                                    <field name="icon"/>
                                    <field name="image_url"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                    <field name="description" placeholder="Description for your customers..."/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Appointment Type List View -->
    <record id="appointment_type_view_list" model="ir.ui.view">
        <field name="name">appointment.type.view.list</field>
        <field name="model">appointment.type</field>
        <field name="arch" type="xml">
            <list string="Appointment Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="category"/>
                <field name="slot_duration" widget="float_time"/>
                <field name="booking_count"/>
                <field name="is_published"/>
            </list>
        </field>
    </record>

    <!-- Appointment Type Kanban View -->
    <record id="appointment_type_view_kanban" model="ir.ui.view">
        <field name="name">appointment.type.view.kanban</field>
        <field name="model">appointment.type</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard o_appointment_kanban" sample="1">
                <field name="name"/>
                <field name="category"/>
                <field name="slot_duration"/>
                <field name="booking_count"/>
                <field name="upcoming_booking_count"/>
                <field name="image"/>
                <field name="icon"/>
                <field name="resource_ids"/>
                <field name="staff_user_ids"/>
                <field name="booking_type"/>
                <field name="is_published"/>
                <field name="website_url"/>
                <field name="total_capacity"/>
                <field name="manage_capacity"/>
                <templates>
                    <t t-name="card" class="flex-row">
                        <aside class="d-flex align-items-center pe-3">
                            <t t-if="record.image.raw_value">
                                <field name="image" widget="image" class="o_kanban_image" options="{'size': [80, 80]}"/>
                            </t>
                            <t t-else="">
                                <div class="o_kanban_image d-flex align-items-center justify-content-center bg-100 rounded" style="width:80px;height:80px;">
                                    <i t-attf-class="fa #{record.icon.raw_value or 'fa-calendar'} fa-3x text-muted"/>
                                </div>
                            </t>
                        </aside>
                        <main class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <strong class="o_kanban_record_title fs-5">
                                        <field name="name"/>
                                    </strong>
                                    <div class="text-muted small mt-1">
                                        <i class="fa fa-clock-o me-1"/><field name="slot_duration" widget="float_time"/> duration
                                    </div>
                                </div>
                                <div class="text-end">
                                    <t t-if="record.is_published.raw_value">
                                        <span class="badge bg-success-light text-success">Published</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge bg-warning-light text-warning">Unpublished</span>
                                    </t>
                                </div>
                            </div>
                            <div class="row mt-3 g-2">
                                <div class="col-6">
                                    <div class="border rounded p-2 text-center">
                                        <div class="fs-4 fw-bold text-primary">
                                            <field name="upcoming_booking_count"/>
                                        </div>
                                        <div class="small text-muted">Upcoming</div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="border rounded p-2 text-center">
                                        <div class="fs-4 fw-bold">
                                            <field name="booking_count"/>
                                        </div>
                                        <div class="small text-muted">Total</div>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2 small">
                                <t t-if="record.booking_type.raw_value == 'resource' and record.resource_ids.raw_value.length">
                                    <span class="me-3">
                                        <i class="fa fa-cube text-muted"/> <t t-out="record.resource_ids.raw_value.length"/> resources
                                    </span>
                                    <t t-if="record.manage_capacity.raw_value">
                                        <span>
                                            <i class="fa fa-users text-muted"/> capacity: <field name="total_capacity"/>
                                        </span>
                                    </t>
                                </t>
                                <t t-if="record.booking_type.raw_value == 'user' and record.staff_user_ids.raw_value.length">
                                    <span>
                                        <i class="fa fa-user text-muted"/> <t t-out="record.staff_user_ids.raw_value.length"/> staff members
                                    </span>
                                </t>
                            </div>
                            <div class="mt-3 d-flex gap-2">
                                <button name="action_share" type="object" class="btn btn-sm btn-primary">
                                    <i class="fa fa-share-alt"/> Share
                                </button>
                                <button name="action_view_bookings" type="object" class="btn btn-sm btn-secondary">
                                    <i class="fa fa-calendar"/> Bookings
                                </button>
                                <button name="action_open_settings" type="object" class="btn btn-sm btn-link">
                                    <i class="fa fa-cog"/>
                                </button>
                            </div>
                        </main>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Appointment Type Search View -->
    <record id="appointment_type_view_search" model="ir.ui.view">
        <field name="name">appointment.type.view.search</field>
        <field name="model">appointment.type</field>
        <field name="arch" type="xml">
            <search string="Search Appointment Types">
                <field name="name"/>
                <field name="category"/>
                <filter string="Published" name="published" domain="[('is_published', '=', True)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Meeting" name="meeting" domain="[('category', '=', 'meeting')]"/>
                <filter string="Video Call" name="video_call" domain="[('category', '=', 'video_call')]"/>
                <filter string="Table" name="table" domain="[('category', '=', 'table')]"/>
                <filter string="Resource" name="resource" domain="[('category', '=', 'resource')]"/>
                <filter string="Paid Consultation" name="paid_consultation" domain="[('category', '=', 'paid_consultation')]"/>
                <filter string="Paid Seat" name="paid_seat" domain="[('category', '=', 'paid_seat')]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="groupby_category" context="{'group_by': 'category'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="appointment_type_action" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">appointment.type</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_published': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first appointment type
            </p>
            <p>
                Allow your customers to book appointments online.
            </p>
        </field>
    </record>
</odoo>
