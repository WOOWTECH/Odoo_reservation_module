<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="pos_self_order_enhancement.PaymentPage">
        <div class="o_self_order_payment_page d-flex flex-column h-100 bg-light">
            <!-- Header -->
            <div class="payment-header bg-white border-bottom p-3 d-flex align-items-center">
                <button class="btn btn-link text-dark p-0 me-3" t-on-click="goBack">
                    <i class="fa fa-arrow-left fa-lg"></i>
                </button>
                <h4 class="mb-0 fw-bold">付款</h4>
            </div>

            <!-- Content -->
            <div class="payment-content flex-grow-1 overflow-auto p-3">
                <!-- Loading State -->
                <t t-if="state.loading">
                    <div class="d-flex flex-column justify-content-center align-items-center h-100">
                        <div class="spinner-border text-primary mb-3" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="text-muted">處理中，請稍候...</p>
                    </div>
                </t>

                <!-- Error State -->
                <t t-elif="state.error">
                    <div class="alert alert-danger" role="alert">
                        <i class="fa fa-exclamation-circle me-2"></i>
                        <t t-esc="state.error"/>
                    </div>
                </t>

                <!-- Payment Options -->
                <t t-else="">
                    <!-- Order Summary -->
                    <div class="order-summary bg-white rounded-3 shadow-sm p-3 mb-3">
                        <h6 class="fw-bold mb-3 text-muted">訂單摘要</h6>
                        <div class="order-lines">
                            <t t-foreach="orderLines" t-as="line" t-key="line.uuid || line.id">
                                <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                    <div>
                                        <span t-esc="line.full_product_name || line.product_id?.name"/>
                                        <span class="text-muted ms-2">x<t t-esc="line.qty"/></span>
                                    </div>
                                    <span class="fw-semibold">
                                        <t t-esc="formatCurrency(line.price_subtotal_incl || 0)"/>
                                    </span>
                                </div>
                            </t>
                        </div>
                        <div class="d-flex justify-content-between align-items-center pt-3 mt-2">
                            <span class="fw-bold fs-5">總計</span>
                            <span class="fw-bold fs-4 text-primary">
                                <t t-esc="formatCurrency(totalAmount)"/>
                            </span>
                        </div>
                    </div>

                    <!-- Online Payment Methods (if available) -->
                    <t t-if="hasOnlinePayment">
                        <div class="payment-methods bg-white rounded-3 shadow-sm p-3 mb-3">
                            <h6 class="fw-bold mb-3 text-muted">選擇付款方式</h6>
                            <div class="d-flex flex-column gap-2">
                                <t t-foreach="onlinePaymentMethods" t-as="method" t-key="method.id">
                                    <button class="btn btn-outline-primary btn-lg d-flex align-items-center justify-content-start p-3"
                                            t-on-click="() => this.selectOnlinePayment(method.id)">
                                        <i class="fa fa-credit-card me-3 fs-4"></i>
                                        <span t-esc="method.name"/>
                                    </button>
                                </t>
                            </div>
                        </div>
                    </t>

                    <!-- Counter Payment (when no online payment available) -->
                    <t t-else="">
                        <div class="counter-payment bg-white rounded-3 shadow-sm p-4 text-center">
                            <div class="mb-4">
                                <i class="fa fa-file-text-o fa-4x text-primary"></i>
                            </div>
                            <h4 class="fw-bold mb-3">請至櫃台付款</h4>
                            <div class="order-info bg-light rounded-3 p-3 mb-4">
                                <div class="mb-2">
                                    <span class="text-muted">訂單編號:</span>
                                    <span class="fw-bold ms-2" t-esc="orderReference"/>
                                </div>
                                <div>
                                    <span class="text-muted">總計:</span>
                                    <span class="fw-bold fs-5 text-primary ms-2">
                                        <t t-esc="formatCurrency(totalAmount)"/>
                                    </span>
                                </div>
                            </div>
                            <p class="text-muted mb-4">
                                請出示此畫面給服務人員
                            </p>
                            <button class="btn btn-primary btn-lg w-100 py-3"
                                    t-on-click="confirmCounterPayment">
                                <i class="fa fa-check-circle me-2"></i>
                                我已完成付款
                            </button>
                        </div>
                    </t>
                </t>
            </div>
        </div>
    </t>

</templates>
