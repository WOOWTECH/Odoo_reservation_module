<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Appointment Booking Form View -->
    <record id="appointment_booking_view_form" model="ir.ui.view">
        <field name="name">appointment.booking.view.form</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <form string="預約">
                <header>
                    <button name="action_confirm" type="object" string="確認"
                            invisible="state != 'draft'" class="btn-primary"/>
                    <button name="action_done" type="object" string="標記完成"
                            invisible="state != 'confirmed'" class="btn-primary"/>
                    <button name="action_cancel" type="object" string="取消"
                            invisible="state not in ['draft', 'confirmed']"/>
                    <button name="action_draft" type="object" string="設為草稿"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="預約詳情">
                            <field name="appointment_type_id"/>
                            <field name="start_datetime"/>
                            <field name="end_datetime"/>
                            <field name="duration" widget="float_time"/>
                            <field name="resource_id" invisible="not resource_id"/>
                            <field name="staff_user_id" invisible="not staff_user_id"/>
                        </group>
                        <group string="訪客資訊">
                            <field name="partner_id"/>
                            <field name="guest_name"/>
                            <field name="guest_email"/>
                            <field name="guest_phone"/>
                            <field name="guest_count"/>
                        </group>
                    </group>
                    <group invisible="payment_status == 'not_required'">
                        <group string="付款">
                            <field name="payment_status"/>
                            <field name="payment_amount"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="回答" name="answers" invisible="not answer_ids">
                            <field name="answer_ids">
                                <list create="0" delete="0">
                                    <field name="question_id"/>
                                    <field name="display_value"/>
                                </list>
                            </field>
                        </page>
                        <page string="備註" name="notes">
                            <field name="notes" placeholder="訪客的備註..."/>
                            <separator string="內部備註"/>
                            <field name="internal_notes" placeholder="內部備註（訪客不可見）..."/>
                        </page>
                        <page string="技術" name="technical" groups="base.group_no_one">
                            <group>
                                <field name="access_token"/>
                                <field name="calendar_event_id"/>
                                <field name="slot_id"/>
                                <field name="company_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Appointment Booking List View -->
    <record id="appointment_booking_view_list" model="ir.ui.view">
        <field name="name">appointment.booking.view.list</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <list string="預約" decoration-muted="state == 'cancelled'" decoration-success="state == 'confirmed'">
                <field name="name"/>
                <field name="appointment_type_id"/>
                <field name="guest_name"/>
                <field name="guest_email"/>
                <field name="start_datetime"/>
                <field name="duration" widget="float_time"/>
                <field name="guest_count"/>
                <field name="resource_id" optional="show"/>
                <field name="staff_user_id" optional="show"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'"
                       decoration-success="state == 'confirmed'" decoration-muted="state == 'cancelled'"
                       decoration-primary="state == 'done'"/>
            </list>
        </field>
    </record>

    <!-- Appointment Booking Calendar View -->
    <record id="appointment_booking_view_calendar" model="ir.ui.view">
        <field name="name">appointment.booking.view.calendar</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <calendar string="預約" date_start="start_datetime" date_stop="end_datetime"
                      color="appointment_type_id" mode="week" quick_create="0">
                <field name="guest_name"/>
                <field name="appointment_type_id"/>
                <field name="guest_count"/>
            </calendar>
        </field>
    </record>

    <!-- Calendar View for Resources -->
    <record id="appointment_booking_view_calendar_resource" model="ir.ui.view">
        <field name="name">appointment.booking.view.calendar.resource</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <calendar string="資源預約" date_start="start_datetime" date_stop="end_datetime"
                      color="resource_id" mode="week" quick_create="0">
                <field name="guest_name"/>
                <field name="resource_id"/>
                <field name="guest_count"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Calendar View for Staff -->
    <record id="appointment_booking_view_calendar_staff" model="ir.ui.view">
        <field name="name">appointment.booking.view.calendar.staff</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <calendar string="員工預約" date_start="start_datetime" date_stop="end_datetime"
                      color="staff_user_id" mode="week" quick_create="0">
                <field name="guest_name"/>
                <field name="staff_user_id"/>
                <field name="guest_count"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>

    <!-- Appointment Booking Search View -->
    <record id="appointment_booking_view_search" model="ir.ui.view">
        <field name="name">appointment.booking.view.search</field>
        <field name="model">appointment.booking</field>
        <field name="arch" type="xml">
            <search string="搜尋預約">
                <field name="name"/>
                <field name="guest_name"/>
                <field name="guest_email"/>
                <field name="appointment_type_id"/>
                <field name="resource_id"/>
                <field name="staff_user_id"/>
                <separator/>
                <filter string="今天" name="today"
                        domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))),
                                 ('start_datetime', '&lt;', datetime.datetime.combine(context_today() + relativedelta(days=1), datetime.time(0,0,0)))]"/>
                <filter string="本週" name="this_week"
                        domain="[('start_datetime', '&gt;=', datetime.datetime.combine(context_today() - relativedelta(days=context_today().weekday()), datetime.time(0,0,0))),
                                 ('start_datetime', '&lt;', datetime.datetime.combine(context_today() + relativedelta(days=7-context_today().weekday()), datetime.time(0,0,0)))]"/>
                <filter string="即將到來" name="upcoming"
                        domain="[('start_datetime', '&gt;=', context_today())]"/>
                <separator/>
                <filter string="草稿" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="已確認" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="已完成" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="已取消" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <group expand="0" string="分組">
                    <filter string="預約類型" name="groupby_type" context="{'group_by': 'appointment_type_id'}"/>
                    <filter string="狀態" name="groupby_state" context="{'group_by': 'state'}"/>
                    <filter string="日期" name="groupby_date" context="{'group_by': 'start_datetime:day'}"/>
                    <filter string="資源" name="groupby_resource" context="{'group_by': 'resource_id'}"/>
                    <filter string="員工" name="groupby_staff" context="{'group_by': 'staff_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="appointment_booking_action" model="ir.actions.act_window">
        <field name="name">所有預約</field>
        <field name="res_model">appointment.booking</field>
        <field name="view_mode">list,calendar,form</field>
        <field name="context">{'search_default_upcoming': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                尚無預約
            </p>
            <p>
                當客戶進行預約時，預約將會顯示在這裡。
            </p>
        </field>
    </record>

    <record id="appointment_booking_action_calendar" model="ir.actions.act_window">
        <field name="name">預約</field>
        <field name="res_model">appointment.booking</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="context">{'search_default_confirmed': 1}</field>
    </record>

    <record id="appointment_booking_action_resource" model="ir.actions.act_window">
        <field name="name">資源預約</field>
        <field name="res_model">appointment.booking</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="domain">[('resource_id', '!=', False)]</field>
        <field name="context">{'search_default_upcoming': 1}</field>
    </record>

    <!-- Resource Calendar View Reference -->
    <record id="appointment_booking_action_resource_view_calendar" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="appointment_booking_view_calendar_resource"/>
        <field name="act_window_id" ref="appointment_booking_action_resource"/>
    </record>

    <record id="appointment_booking_action_staff" model="ir.actions.act_window">
        <field name="name">員工預約</field>
        <field name="res_model">appointment.booking</field>
        <field name="view_mode">calendar,list,form</field>
        <field name="domain">[('staff_user_id', '!=', False)]</field>
        <field name="context">{'search_default_upcoming': 1}</field>
    </record>

    <!-- Staff Calendar View Reference -->
    <record id="appointment_booking_action_staff_view_calendar" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">calendar</field>
        <field name="view_id" ref="appointment_booking_view_calendar_staff"/>
        <field name="act_window_id" ref="appointment_booking_action_staff"/>
    </record>
</odoo>
